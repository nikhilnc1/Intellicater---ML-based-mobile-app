<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:foregroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/leftarrow" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-39dp"
        android:fontFamily="sans-serif-black"
        android:text="OTP Verification"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="OTP is sent to your College mail address"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Please enter your OTP"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

    <EditText
        android:id="@+id/otp1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/otp2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="264dp" />

    <EditText
        android:id="@+id/otp2"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/otp3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="264dp" />

    <EditText
        android:id="@+id/otp3"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/otp4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="264dp" />

    <EditText
        android:id="@+id/otp4"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="264dp" />

        </LinearLayout>

    <TextView
        android:id="@+id/otpResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Didnâ€™t receive the OTP ?  RESEND OTP "
        android:textColor="#AE1C1C"
       />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_margin="20dp"
            android:background="@drawable/buttongradient"
            android:textColor="@color/white"
            android:id="@+id/donebtn"/>



    </LinearLayout>

</LinearLayout>